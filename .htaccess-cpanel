# ============================================================================
# Vue.js SPA Router Configuration pour cPanel
# Placez ce fichier à la racine du domaine (public_html/)
# ============================================================================

# Activer le module de réécriture
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Définir la base de réécriture (racine du site)
    RewriteBase /
    
    # Éviter les boucles infinies
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Réécrire toutes les routes non-existantes vers index.html
    RewriteRule ^(?!.*\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$).*$ index.html [QSA,L]
</IfModule>

# ============================================================================
# Compression GZIP (optionnel mais recommandé)
# ============================================================================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml
    AddOutputFilterByType DEFLATE text/css text/javascript
    AddOutputFilterByType DEFLATE application/javascript application/json
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# ============================================================================
# Cache browser (optionnel)
# ============================================================================
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # Styles et scripts
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    
    # Fonts
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    
    # Default
    ExpiresDefault "access plus 2 days"
</IfModule>

# ============================================================================
# Types MIME corrects (important!)
# ============================================================================
<IfModule mod_mime.c>
    AddType application/javascript js mjs
    AddType application/json json
    AddType application/font-woff woff
    AddType application/font-woff2 woff2
    AddEncoding gzip svgz
    AddType image/svg+xml svg svgz
</IfModule>

# ============================================================================
# Sécurité - Empêcher l'accès aux fichiers sensibles
# ============================================================================
<FilesMatch "\.(env|htaccess|htpasswd|json|lock)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# ============================================================================
# Headers de sécurité (optionnel)
# ============================================================================
<IfModule mod_headers.c>
    # Éviter le clickjacking
    Header set X-Frame-Options "SAMEORIGIN"
    # Empêcher le MIME sniffing
    Header set X-Content-Type-Options "nosniff"
    # Activer la protection XSS (certains navigateurs)
    Header set X-XSS-Protection "1; mode=block"
</IfModule>
